<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/diarybackground"
    tools:context="com.example.finalproject.FamilyDetailDiaryActivity" >
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#aaffffff"
        >
		<ListView
        	android:id="@+id/familyDetailDiaryListView"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	/>
    
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginTop="20dp"
		    android:gravity="right"
		    >
		    <ImageButton
		        android:id="@+id/familyDiaryDetailDeleteBtn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/delete_btn"
		        />
		    <ImageButton
		        android:id="@+id/familyDiaryDetailModifyBtn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/modify_btn"
		        />
		    <ImageButton
		        android:id="@+id/familyDiaryDetailWriteBtn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/write_btn"
		        />
		</LinearLayout>
		
    </LinearLayout>
    
    
    
      
    
</LinearLayout>
