<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="@drawable/wish"
    android:orientation="vertical" >
     
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="#88ffffff"
        >
        
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:gravity="center"
       
        >
        
         
           <TextView
               android:id="@+id/wishListCompleteDate"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#93CDDD"
               android:gravity="center"
               android:layout_weight="1"
               android:paddingBottom="20dp"
               android:layout_marginBottom="5dp"
               android:paddingTop="20dp"
               android:textSize="16dp"
               
               android:textColor="#ffffff" />
        
          </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/wishListWriterPicture"
            android:layout_width="72dp"
            android:layout_height="54dp"
            android:adjustViewBounds="true"
            android:src="@drawable/brad" />

        <TextView
            android:id="@+id/wishListWriter"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="한벼리"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/wishListWriteDate"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="2015/07/07"
            
            />

        <ImageView
            android:id="@+id/isFinishedCheck"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
           
            android:src="@drawable/checked" />

        <ImageView
            android:id="@+id/WishListFinish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/complete_btn"
            android:textColor="#ffffff" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
         android:gravity="center"
        android:background="@drawable/border"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/wishListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="나의 소망"
            android:textColor="#000000"
            />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/wishListContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="10"
            android:maxLines="12"
            android:text="좋은 곳 취직하기"
            android:textColor="#000000"
            android:gravity="center"
            />
        
    </LinearLayout>
       <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"
                    android:orientation="horizontal" >

                       <ImageView
                           android:id="@+id/wishListRegister"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/write_btn"
                            />
               
                       <ImageView
                           android:id="@+id/wishListUpdate"
                            android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/modify_btn"
                          
                            />
                     
                       <ImageView
                           android:id="@+id/WishListDelete"
                            android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/delete_btn"
                           
                            />
                </LinearLayout>
    
    
   </LinearLayout>
    
</LinearLayout>