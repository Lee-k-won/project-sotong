<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/storybackground"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#aaffffff"
        >
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:orientation="vertical"
        	>
        	<TextView
        	    android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:text="우리가족 이야기 수정"
            	android:textColor="#ffffff"
            	android:textSize="25dp"
            	android:layout_marginTop="10dp"
           	 	android:layout_marginBottom="20dp"
           	 	android:background="#7CD1E6"
            	android:gravity="center"
        	    />
        </LinearLayout>
        
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:layout_marginBottom="10dp"
        	android:background="@drawable/border"
        	
        	>
        	<EditText
        	    android:id="@+id/storyModifyContents"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:layout_marginLeft="10dp"
            	android:lines="12"
            	android:maxLines="15"
            	android:background="@null"
            	/>
        
    	</LinearLayout>
    	
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_marginLeft="20dp"
        	android:layout_marginRight="20dp"
        	android:layout_marginBottom="10dp"
        	>
        	<RadioGroup
           		android:id="@+id/storyModifyOpenGroup"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:checkedButton="@+id/modifyRadio1"
            	android:orientation="horizontal"
            	>
            	<RadioButton
                	android:id="@+id/modifyRadio1"
                	android:layout_width="0dp"
                	android:layout_weight="1"
               		android:layout_height="wrap_content"
                	android:text="가족공개"
                	/>
            	<RadioButton
                	android:id="@+id/modifyRadio2"
                	android:layout_width="0dp"
                	android:layout_weight="1"
                	android:layout_height="wrap_content"
                	android:text="이웃공개"
                	/>
        	</RadioGroup>
        
    	</LinearLayout>
       
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            >
        	<ImageButton
        	    android:id="@+id/storyModifyRegisterBtn"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:src="@drawable/complete_btn"
        	    
        	    />
        
        </LinearLayout>
        
        
        
        
    </LinearLayout>

   
    
</LinearLayout>
