<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradation"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/monthText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9DE6D9"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            />
        <ImageButton
            android:id="@+id/monthPrevious1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/prev"
            android:layout_toLeftOf="@id/monthText1"
            />
        <ImageButton
            android:id="@+id/monthNext1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/next"
            android:layout_toRightOf="@id/monthText1"
            />
        <ImageButton
            android:id="@+id/addSingleScheduleBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/write_btn"
            android:layout_alignParentRight="true"
            />
        
    </RelativeLayout>
    
    

    <com.example.finalproject.calendar.CalendarView
        android:id="@+id/monthView1"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_weight="0.51" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.70" >
    </ListView>
    
    

</LinearLayout>